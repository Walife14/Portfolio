---
import { Icon } from "astro-icon/components";
import data from "../../data/services.json";
---

<section class="px-4 md:px-20 lg:px-0">
  <div class="lg:w-8/12 lg:mx-auto">
    <h2 class="sr-only">How I Work</h2>
    <div class="grid grid-cols-2 gap-3 lg:gap-x-40 lg:gap-y-20">
      {
        data.map((service) => (
          <div class="flex flex-col items-start gap-y-3">
            <div class="text-primary">
              <Icon name={service.icon} size={35} />
            </div>
            <h3 class="text-2xl font-bold">{service.name}</h3>
            <p class="text-sm text-dark-grey">{service.content}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
